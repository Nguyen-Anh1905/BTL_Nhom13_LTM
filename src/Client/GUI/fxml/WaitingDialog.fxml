<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="320.0" maxWidth="500.0" minHeight="220.0" minWidth="300.0" prefHeight="250.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.controller.WaitingDialogController">
   <children>
      <!-- Icon hoặc hình ảnh chờ -->
      <Label text="⏳" textFill="#FF9800">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      
      <!-- Thông báo chờ -->
      <Label text="Đang chờ phản hồi..." textFill="#424242">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      
      <!-- Tên đối thủ -->
      <Label fx:id="lblOpponentName" text="Username" textFill="#1976D2">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      
      <!-- Countdown timer -->
      <Label fx:id="lblCountdown" text="⏱ 30 giây" textFill="#F44336">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <!-- Progress bar -->
      <ProgressBar fx:id="progressTime" maxWidth="Infinity" prefWidth="300.0" progress="1.0" style="-fx-accent: #FF9800;" />
      
      <!-- Nút hủy -->
      <Button fx:id="btnCancel" maxWidth="200.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" text="Hủy lời mời">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
